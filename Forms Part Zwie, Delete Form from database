//first we need to create a custom component go to app/providers and in the boot function place
 Form::component('hidden', 'components.form.hidden', ['name', 'value' => null, 'attributes' => []]);
 
 then back in the view where the delete button is place this code, notice the hidden method on line 6
 {!! Form::open(['action' => ['TodoController@destroy', $todo->id], 'method' => 'POST']) !!}
        {{ Form::hidden('_method', 'Delete') }}
        {{ Form::bsSubmit('Delete', ['class' => 'btn btn-danger pull-right']) }}
        {!! Form::close() !!}
        
 
 //now in your controller find the destory method and pass the id from line 5
  public function destroy($id)
    {

    $todo = Todo::find($id);
    $todo->delete();

    return redirect('/')->with('success', $todo->text. ' Successfully Deleted!');

    }
