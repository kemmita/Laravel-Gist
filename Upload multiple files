//in your view
<div class="form-group">
                        <label for="docufile">Upload Associated Documentation</label>
                        <input type="file" name="docufile[]" multiple>
   </div>
   
   
//in your controller
public function storeFile(request $request){
    if ($request->hasFile('docufile')){
    //foreach handles the array coming in from the view above
        foreach ($request->docufile as $file){
            $filename = $file->getClientOriginalName();
            $filesize = $file->getClientSize();
            $file->storeAs('public/upload', $filename);
            //remember to include the file model/table
            $fileModel = new File;
            $fileModel->name = $filename;
            $fileModel->size = $filesize;
            $fileModel->save();
        }
        return 'yes';
    }
}
